      <name>木兰宽松许可证, 第1版</name>
      <url>http://license.coscl.org.cn/MulanPSL</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <developers>
    <developer>
      <id>xiaoe</id>
      <name>小流氓</name>
      <email>176543888@qq.com</email>
      <url>http://blog.noark.xyz</url>
    </developer>
  </developers>
  <scm>
    <connection>scm:git:git@gitee.com:xiaoe/noark3.git</connection>
    <developerConnection>scm:git:git@gitee.com:xiaoe/noark3.git</developerConnection>
    <url>https://gitee.com/xiaoe/noark3/</url>
  </scm>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
